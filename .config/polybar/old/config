;format-prefix-background =${colors.primary}
format-prefix-foreground =  #ffffff
format-prefix-padding = 0
;format-underline = ${colors.primary}

label-background =${colors.background}
label-foreground = #ffffff
label-padding = 1
label = %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = %{T2}%{T-} %percentage%%
label-volume-foreground = ${root.foreground}

label-muted =  muted
label-muted-foreground = #666

bar-volume-width = 20
;bar-volume-foreground-0 = #00ff00
;bar-volume-foreground-1 = #00ff55
;bar-volume-foreground-2 = #00ffaa
;bar-volume-foreground-3 = #00ffff
;bar-volume-foreground-4 = #00aaff
;bar-volume-foreground-5 = #0055ff
;bar-volume-foreground-6 = #0000ff
;bar-volume-gradient = true

bar-volume-indicator = 
bar-volume-indicator-font = 2
bar-volume-fill = ■
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

;[module/temperature]
;type = internal/temperature
;thermal-zone = 0
;warn-temperature = 60

;format = <ramp> <label>
;format-underline = #f50a4d
