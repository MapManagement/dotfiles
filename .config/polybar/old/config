[colors]
background = #99000000
background-alt = #000000
foreground = #dfdfdf
foreground-alt = #555
primary = #28a33f
secondary = #289fa3
alert = #bd2c40
icon = #444444

[bar/example]
font-0 = "MesloLGS NF:size=11;1"
font-1 = "Material:size=20;4"

;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 35
offset-x = 0%
offset-y = .5%
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = ${colors.primary}

border-size = 0
border-color = ${colors.primary}

padding = 3

module-margin-left = 4
module-margin-right = 4

modules-left = root-dir vm-dir date memory cpu kvm rsync spotify pulseaudio
modules-center = 
modules-right = 

tray-position = left
tray-padding = 2
tray-background = ${colors.background}

;override-redirect = true
cursor-click = pointer
cursor-scroll = ns-resize

[module/spotify]
type = custom/script
interval = 1

format-prefix = %{T2}%{T-}
;format-prefix-background = ${colors.primary}
format-prefix-foreground = #ffffff
format-prefix-padding = 0
;format-underline = ${colors.primary}
format = <label> 

exec = python /home/jan/.config/polybar/spotify_mod.py -f ' {song} - {artist}' -q 

[module/rsync]
type = custom/script
interval = 1

format-prefix = %{T2} %{T-}
;format-prefix-background = ${colors.primary}
format-prefix-foreground = #ffffff
format-prefix-padding = 0
;format-underline = ${colors.primary}
format = <label>

exec = python /home/jan/.config/polybar/mod-rsync.py

[module/kvm]
type = custom/script
